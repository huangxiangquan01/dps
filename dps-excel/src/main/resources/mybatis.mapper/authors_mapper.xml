<mapper namespace="cn.xqhuang.dps.mapper.AuthorsMapper">
  <resultMap id="BaseResultMap" type="cn.xqhuang.dps.entity.Authors">
    <id column="id" property="id" />
    <result column="first_name" property="firstName" />
    <result column="last_name" property="lastName" />
    <result column="email" property="email" />
    <result column="added" property="added" />
  </resultMap>
  
  

  <select id="selectByExample" parameterType="map" resultMap="BaseResultMap">
    select
    <if test="distinct">
      distinct
    </if>
    'false' as QUERYID,
    *
    from authors
     <if test="name != null">
      and name = #{name}
    </if>
    <if test="orderByClause != null">
      order by ${orderByClause}
    </if>
  </select>
  
